<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/edit_name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center" android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <ImageView
        android:id="@+id/icono"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/comensales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de comensales: "
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText" />

    <TextView
        android:id="@+id/ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredientes: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/descripcion" android:text="Aqui los ingredientes de la receta"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/elaboracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elaboración: "
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/descripcion2" android:text="Aqui la elaboracion de la receta"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />




</LinearLayout>